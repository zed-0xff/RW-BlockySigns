<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="Blocky_Props_Base">
    <defName>Blocky_Props_AcaciaSign</defName>
    <label>acacia sign</label>
    <designationCategory>Blocky</designationCategory>
    <graphicData>
      <texPath>Blocky/Signs/AcaciaSign</texPath>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="Blocky_Props_Base">
    <defName>Blocky_Signs_Sign</defName>
    <label>sign</label>
    <designationCategory>Blocky</designationCategory>
    <graphicData>
      <texPath>Blocky/Signs/Sign</texPath>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>1</costStuffCount>

    <drawerType>MapMeshAndRealTime</drawerType>
    <drawGUIOverlay>true</drawGUIOverlay>
    <comps>
      <li Class="Blocky.Signs.CompProperties_Nameable">
        <labelShift>0.32</labelShift>
        <leftTexPath>Blocky/Signs/BorderlessLeft</leftTexPath>
        <centerTexPath>Blocky/Signs/BorderlessCenter</centerTexPath>
        <rightTexPath>Blocky/Signs/BorderlessRight</rightTexPath>
      </li>
    </comps>
  </ThingDef>

  <!-- FIXME: shadow -->
  <!-- FIXME: common parent -->
  <ThingDef ParentName="Blocky_Props_Base">
    <defName>Blocky_Signs_WallSign</defName>
    <label>wall sign</label>
    <designationCategory>Blocky</designationCategory>
    <graphicData>
      <texPath>Blocky/Signs/WallSign</texPath>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>1</costStuffCount>

    <building>
      <isEdifice>false</isEdifice>
      <canPlaceOverWall>true</canPlaceOverWall>
    </building>
    <clearBuildingArea>false</clearBuildingArea>

    <uiIconOffset>(0, -0.1)</uiIconOffset>

    <drawerType>MapMeshAndRealTime</drawerType>
    <drawGUIOverlay>true</drawGUIOverlay>
    <comps>
      <li Class="Blocky.Signs.CompProperties_Nameable">
        <labelShift>-0.11</labelShift>
        <leftTexPath>Blocky/Signs/BorderlessLeft</leftTexPath>
        <centerTexPath>Blocky/Signs/BorderlessCenter</centerTexPath>
        <rightTexPath>Blocky/Signs/BorderlessRight</rightTexPath>
      </li>
    </comps>
  </ThingDef>
</Defs>
